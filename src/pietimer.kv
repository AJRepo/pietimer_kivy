            color: .3, .6, .7, 1
            font_size: '22sp'
            pos: root.center_x*(1 + 1.1*pie_radius_factor*sin(2*pi/6)), root.center_y + 1.1*pie_radius_factor* (root.center_x) * cos(2*pi/6)
