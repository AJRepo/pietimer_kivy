            #        size: self.size
            #        pos: self.pos
            #See TimerText Parent Dynamic Class Above (child class)
            TimerText:
                id: "hrs_top"
                name: "hrs_tt"
                text: app.str_hours
                disabled: app.running  #change to True when clock is running
                on_text_validate: app.set_new_time(self)
            TimerText:
