    AnchorLayout:
        size_hint: 1,.9
        #pos_hint: {"x":0, "y":0}
        id: "text_time"
        BoxLayout:
            id: "bottom_buttons"
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: text_area_hint #see vars at top of page
            size: 20, root.width/8
            TimerButton:
                id: "hrs"
                text: app.str_hours
            TimerButton:
                id: "min"
                text: app.str_min
            TimerButton:
                id: "sec"
                text: app.str_sec
        BoxLayout:
            id: "top_text_boxes"
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: text_area_hint
            size: 20, root.width/8
            opacity: app.top_opacity
            #canvas:
            #    Color:
            #        rgb: .9,0,.9
